{
  "variables": {
    "home_dir": "{{env `HOME`}}",
    "origin_box_name": ""
  },
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "{{user `home_dir`}}/.vagrant.d/boxes/{{user `origin_box_name`}}/virtualbox/box.ovf",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "headless": true,
      "ssh_wait_timeout": "30s",
      "shutdown_command": "echo 'Packing: Shutdown!' | sudo -S shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "chef-solo",
      "cookbook_paths": ["berks-cookbooks"],
      "run_list" : ["prep-box-cookbook::default"]
    },
    {
      "type": "shell",
      "inline": [
        "sudo curl https://raw.githubusercontent.com/chef/bento/master/scripts/centos/cleanup.sh -o /root/cleanup.sh",
        "sudo chmod 700 /root/cheanup.sh",
        "sudo sh /root/cleanup.sh"
      ]
    }
  ],
 "post-processors": [
    {
      "output": "opscode-centos-6.5-prepped.box",
      "type": "vagrant",
      "compression_level": 1,
      "keep_input_artifact": true
    }
  ]
}
